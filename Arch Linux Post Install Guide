# Post Install

pacman -S alsa-utils alsa-oss alsa-utils-server

pacman -S xorg-server xorg-server-utils xorg-xinit

pacman -S mesa mesa-demos

pacman -S xf86-video-intel

pacman -S xf86-input-synaptics

pacman -S ttf-dejavu ttf-liberation

# Create User
useradd -m -g users -G lp,scanner,network,audio,video,optical,power,games,storage,wheel -s /bin/bash {your seleted username}

passwd {your selected username}
